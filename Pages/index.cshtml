@page
@model IndexModel
@using Microsoft.Extensions.Configuration;
@inject IConfiguration Configuration;
@{
    string pageName = "Razor page";
    DateTime thisDate = DateTime.Now;
}
<h1 style="color: tomato;">Response from the @pageName</h1>

<h3>@Configuration["Message"]</h3>
<form method="POST">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.Customers )
            {
             <tr>
                <td>customer.ID</td>
                <td>customer.Name</td>
            </tr>
            }
           
        </tbody>

    </table>
</form>

<footer>&copy;, @thisDate.Year</footer>